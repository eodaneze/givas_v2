<IfModule mod_headers.c>
Header set Strict-Transport-Security max-age=16070400;
</IfModule>

RewriteEngine On
RewriteBase /givas_v2/user/

# Pretty URL: /affiliate/{affiliate_id}/{product_id}
RewriteRule ^affiliate/([0-9]+)/([0-9]+)$ redirect.php?affiliate_id=$1&product_id=$2 [L,QSA]

# Existing rule: automatically add .php to URLs
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.php [NC,L]
